  "type": "commonjs",
  "description": "",
  "dependencies": {
    "dotenv": "^16.4.7",
    "playwright": "^1.50.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.2.0",
    "allure-commandline": "^2.32.2",
    "allure-cucumberjs": "^3.1.0"
  }
}
