{
  "name": "automation",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean:allure": "if not exist allure-results mkdir allure-results && rd /s /q allure-results",
    "tag:organization":"npm run clean:allure && npx cucumber-js --tags \"@organization\"",
    "tag:admin":"npm run clean:allure && npx cucumber-js --tags \"@admin\"",
    "tag:user":"npm run clean:allure && npx cucumber-js --tags \"@user\"",
    "tag:regression":"npx cucumber-js",
    "tag:sanity":"npm run clean:allure && npx cucumber-js --tags \"@sanity\"",       
    "test": "npm run clean:allure && npx cucumber-js --tags \"@test\"",
    "generate-report": "allure generate ./allure-results --clean -o ./docs",
    "open-report": "allure open"
  },
  "keywords": [],
